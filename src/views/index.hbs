<div class="card bg-dark text-white">

  <div class="card-header">
    <h5 style="color: rgb(63, 223, 0);">
    <i style="color: rgb(63, 223, 0);" class="far fa-image fa-2x"></i>Realizar publicaci贸n
    </h5>
  </div>

  {{!-- IMAGE UPLOAD FORM --}}
  <div class="card-body">
    <form action="/images" method="POST" enctype="multipart/form-data">

      <div class="form-group">
        <div class="input-group">
          <div class="custom-file">
            <input style="background: rgb(54, 54, 54);" type="file" name="image" class="custom-file-input" id="inputGroupFile"
              aria-describedby="inputGroupFileAddon" required />
            <label class="custom-file-label" for="inputGroupFile">Cargar ilustraci贸n</label>
          </div>
        </div>
      </div>

      <div class="form-group">
        <input type="text" name="title" class="form-control bg-dark text-white border border-success"
          placeholder="Titulo de la publicaci贸n" required>
      </div>

      <div class="form-group">
        <textarea name="description" rows="2" class="form-control bg-dark text-white border border-success"
          placeholder="Descripci贸n" required></textarea>
      </div>

      <div class="form-group">
        <button style="background: rgb(63, 223, 0); color:black;" class="btn btn-success">
          <i class="fa fa-upload"></i> Publicar
        </button>
      </div>

    </form>
  </div>
</div>

<div class="card mt-2 bg-dark text-white">
  <div class="card-header">
    <h5 style="color: rgb(63, 223, 0);">
    <i style="color: rgb(63, 223, 0);" class="far fa-images fa-2x"></i> Publicaciones recientes
    </h5>
  </div>
  <div class="card-body">
    <div class="row">
      {{#each images}}
      <div class="col-md-4 text-center">
        <a href="/images/{{ uniqueId  }}">
          <img src="/uploads/{{filename}}" alt="{{title}}" class="w-100 h-100">
        </a>
      </div>
      {{/each}}
    </div>
  </div>
</div>