<div class="row">

  <div class="col-md-4 offset-md-4">

    {{#if success}}
    <div class="alert alert-success alert-dismissible fade show" role="alert">
      {{success}}
      <button type="button" class="close" data-dismiss="alert" aria-label="Close">
        <span aria-hidden="true">&times;</span>
      </button>
    </div>
    {{/if}}

    <div class="card bg-dark">
      <div class="card-body">
        <h1 style="text-align: center;" class="text-light">Iniciar Sesión</h1>
        <p style="text-align: center; ">        
          <img width="180" height="180" src="/public/images/user.png" alt="">
        </p>
        
        <form action="/auth/signin" method="POST">
          <div class="form-group">
            <input type="text" name="email" class="form-control" placeholder="Example@company.com" autofocus>
          </div>
          <div class="form-group">
            <input type="password" name="password" class="form-control" placeholder="Contraseña">
          </div>
          <button style="background: rgb(63, 223, 0); color:black;" class="btn btn-success btn-block">
            Iniciar Sesión
          </button>
        </form>
      </div>
    </div>
  </div>
</div>